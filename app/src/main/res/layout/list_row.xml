<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_margin="15dp"
    android:layout_marginBottom="30dp"
    android:elevation="3dp"
    android:paddingBottom="10dp">



    <!-- Title Of Song-->

    <!-- Artist Name -->


    <TextView
        android:text="Attendance:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:layout_below="@+id/className"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Class Name"

        android:typeface="sans"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="?android:attr/textColorTertiary" />

    <TextView
        android:id="@+id/attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#343434"
        android:textSize="24sp"

        android:text="23"
        android:padding="0dp"
        android:paddingRight="0dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/attendancetotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#343434"
        android:textSize="24sp"

        android:text="78"
        android:padding="0dp"
        android:layout_alignBaseline="@+id/attendance"
        android:layout_alignBottom="@+id/attendance"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Rightend Duration -->

    <com.hookedonplay.decoviewlib.DecoView
        android:id="@+id/dynamicArcView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/status"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/attendancetotal" />

    <Button
        android:text="Present"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_present"
        android:visibility="visible"
        android:theme="@style/PrimaryFlatButton"

        android:textSize="14sp"
        android:padding="0dp"
        android:background="@android:color/white"
        android:textColor="@color/colorAccentOpposite"
        android:layout_below="@+id/dynamicArcView"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Off"

        android:theme="@style/PrimaryFlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_off"
        android:visibility="visible"
        android:textSize="14sp"
        android:background="@android:color/white"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_alignBaseline="@+id/button_absent"
        android:layout_alignBottom="@+id/button_absent"
        android:layout_toStartOf="@+id/dynamicArcView" />

    <Button
        android:text="Absent"
        android:theme="@style/PrimaryFlatButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_absent"
        android:visibility="visible"
        android:textSize="14sp"
        android:background="@android:color/white"
        android:textColor="@color/colorAccent"
        android:layout_alignBaseline="@+id/button_present"
        android:layout_alignBottom="@+id/button_present"
        android:layout_toStartOf="@+id/button_present" />


</RelativeLayout>

