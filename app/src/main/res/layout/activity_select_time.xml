<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elixer.attendancekeeper.SelectTime"
    android:background="@color/colorPrimary">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignBottom="@+id/button_submit">

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_monday_time"
            android:layout_row="0"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Monday"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_monday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@android:color/white"
            android:layout_margin="1dp" />


        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_tuesday_time"
            android:layout_row="1"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Tuesday"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_tuesday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_wednesday_time"
            android:layout_row="2"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_thursday_time"
            android:layout_row="3"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_friday_time"
            android:layout_row="4"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_saturday_time"
            android:layout_row="5"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <EditText
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/edittext_sunday_time"
            android:layout_row="6"
            android:layout_column="1"
            android:text="9:20"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Monday"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_thursday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="3"
            android:layout_column="0"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Friday"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_friday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="4"
            android:layout_column="0"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Saturday"
            android:layout_width="194dp"
            android:layout_height="39dp"
            android:id="@+id/textview_saturday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="5"
            android:layout_column="0"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Sunday"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_sunday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="6"
            android:layout_column="0"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Wednesday"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview_wednesday"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_row="2"
            android:layout_column="0"
            android:textColor="@android:color/white" />
    </GridLayout>

    <CheckBox
        android:text="Set default time for reminders for all days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:buttonTint="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_weight="0.05"
        android:layout_margin="5dp" />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_submit"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/checkBox4" />

</RelativeLayout>
