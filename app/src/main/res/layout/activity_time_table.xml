<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_time_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elixer.attendancekeeper.TimeTable"
    android:padding="0dp">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDateDisplay"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:fontFamily="sans-serif"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <TextView
        android:text="You have No Classes on this Day."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewEmpty"
        android:textSize="14sp"
        android:textAlignment="center"
        android:visibility="visible"
        android:layout_below="@+id/textViewDateDisplay"
        android:layout_alignParentStart="true"
        android:padding="15dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewTable"
        android:padding="10dp"
        android:paddingBottom="30dp"
        android:layout_below="@+id/textViewEmpty"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
